{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "types": ["node", "playwright"],
    "outDir": "dist",
    "skipLibCheck": true
  },
  "include": ["tests", "utils", "schemas", "config", "data"],
  "exclude": ["node_modules", "dist"]
}